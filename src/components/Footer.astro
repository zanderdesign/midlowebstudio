<style lang="less">
    /*-- -------------------------- -->
    <---          Footer            -->
    <--- -------------------------- -*/

    /* Mobile - 360px */
    @media only screen and (min-width: 0rem) {
        #cs-footer-1339 {
            padding: var(--sectionPadding);
            /* 30px - 50px */
            padding-bottom: clamp(1.875rem, 5vw, 3.125rem);
            background-color: #1a1a1a;
            position: relative;

            .cs-container {
                width: 100%;
                max-width: (1280/16rem);
                margin: auto;
                display: flex;
                justify-content: flex-start;
                align-items: flex-start;
                flex-wrap: wrap;
                column-gap: (48/16rem);
                row-gap: (40/16rem);
            }

            .cs-logo-group {
                /* takes up all the space, lets the other ul's wrap below it */
                width: 100%;
                position: relative;
            }
            .cs-title {
                margin: 0 0 (32/16rem) 0;
                max-width: 23ch;
                color: var(--bodyTextColorWhite);
            }

            .cs-social {
                display: inline-flex;
                justify-content: flex-start;
                gap: (8/16rem);
            }

            .cs-social-link {
                width: (32/16rem);
                height: (32/16rem);
                background-color: #484848;
                border-radius: 50%;
                display: flex;
                justify-content: center;
                align-items: center;
                position: relative;
                z-index: 1;
                transition:
                    transform 0.3s,
                    background-color 0.3s;

                &:hover {
                    background-color: var(--primaryLight);
                    transform: translateY(-0.1875rem);

                    .cs-social-img {
                        filter: grayscale(1) brightness(100%);
                    }
                }
            }

            .cs-social-img {
                height: (12/16rem);
                filter: grayscale(1) brightness(630%);
                width: auto;
                display: block;
            }

            .cs-header {
                font-size: (20/16rem);
                line-height: 1.5em;
                font-weight: 700;
                margin: 0 0 (24/16rem) 0;
                color: #fff;
                display: block;
                position: relative;
            }

            .cs-ul {
                margin: 0;
                padding: 0;
                display: flex;
                flex-direction: column;
                gap: (12/16rem);
            }

            .cs-li {
                list-style: none;
            }

            .cs-link {
                /* 14px - 16px */
                font-size: clamp(0.875rem, 1.5vw, 1rem);
                text-decoration: none;
                line-height: 1.5em;
                text-align: left;
                color: var(--bodyTextColorWhite);
                display: inline-flex;
                align-items: flex-start;
                gap: (8/16rem);
                transition: color 0.3s;

                &:hover {
                    color: var(--primaryLight);
                }
            }

            .cs-icon {
                width: (20/16rem);
                height: auto;
                margin-right: (2/16rem);
                display: block;
            }

            .cs-bottom {
                text-align: center;
                width: 100%;
                max-width: (1280/16rem);
                /* 48px - 64px */
                margin: clamp(1.75rem, 7vw, 4rem) auto 0;
                /* 28px - 40px */
                padding-top: clamp(1.75rem, 3vw, 2.5rem);
                border-top: 1px solid #484848;
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
                gap: (12/16rem);
            }

            .cs-credit,
            .cs-bottom-link,
            .cs-credit-link {
                /* 14px - 16px */
                font-size: clamp(0.875rem, 1.5vw, 1rem);
                line-height: 1.5em;
                text-decoration: none;
                width: auto;
                margin: 0;
                color: #bababa;
                display: inline-block;
                position: relative;
                transition: color 0.3s;
            }

            .cs-credit {
                width: 100%;
            }

            .cs-credit-link {
                /* 14px - 16px */
                font-size: clamp(0.875rem, 1.5vw, 1rem);
                line-height: 1.5em;
                text-decoration: none;
                width: auto;
                margin: 0;
                color: #bababa;
                display: inline-block;
                position: relative;

                &:hover {
                    color: var(--primary);
                }
            }

            .cs-bottom-links {
                width: 100%;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .cs-bottom-link {
                display: flex;
                align-items: center;

                &:hover {
                    color: var(--primary);
                }

                &:last-of-type {
                    &:before {
                        /* seperator */
                        content: "";
                        width: 1px;
                        height: (14/16rem);
                        margin: 0 (12/16rem);
                        background: currentColor;
                        opacity: 1;
                        display: block;
                    }
                }
            }
        }
    }

    /* Tablet - 768px */
    @media only screen and (min-width: 48rem) {
        #cs-footer-1339 {
            .cs-container {
                max-width: (1280/16rem);
                /* 48px - 120px */
                column-gap: clamp(3rem, 8vw, 7.5rem);
                flex-wrap: nowrap;
            }

            .cs-logo-group {
                width: 45%;
                max-width: (622/16rem);
                /* pushes the lists away from it and to the right */
                margin-right: auto;
            }

            .cs-bottom {
                justify-content: space-between;
                flex-wrap: nowrap;
            }

            .cs-credit {
                text-align: left;
            }

            .cs-bottom-links {
                justify-content: flex-end;
            }
        }
    }

    /* Dark Mode */
    @media only screen and (min-width: 48rem) {
        body.dark-mode {
            #cs-footer-1339 {
                background-color: rgba(0, 0, 0, 0.6);
            }
        }
    }
</style>
